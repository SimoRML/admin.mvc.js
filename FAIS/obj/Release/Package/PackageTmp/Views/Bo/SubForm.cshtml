@model FAIS.Models.META_BO

@{
    string boDbName(string txt)
    {
        return Model.BO_DB_NAME + txt;
    }
}
<ul class="nav nav-pills nav-pills-warning">
    <li class="active">
        <a id="@boDbName("-tab-list")" href="#@boDbName("_table")" data-toggle="tab">Liste</a>
    </li>
    <li>
        <a id="@boDbName("-tab-form")" href="#@boDbName("_form")" data-toggle="tab">Ajouter</a>
    </li>
</ul>
<div class="tab-content">
    <div class="tab-pane active" id="fields_table">
        <v-table ref="@boDbName("Table")"
                 datasource="metabo/select/@Model.BO_DB_NAME"></v-table>
    </div>
    <div class="tab-pane" id="@boDbName("_form")">
        <v-form ref="@boDbName("Form")"
                meta-datasource="metabo/GetDefinition/@Model.BO_DB_NAME"
                api="metabo/Crud/@Model.META_BO_ID"></v-form>
    </div>
</div>