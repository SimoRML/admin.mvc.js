<script type="text/javascript">
    $(function () {
        EV = new Environement("Accueil");
        var data = new DataSource("data", {
            baseUrl: URL.addPart(baseUrl, "/"),
            sources: [
                {
                    on: {
                        el: "#submit",
                        event: "click",
                        before: function (me) {
                            // TODO : CALL VALIDATOR
                            me.data = {
                                "username": $("#email").val(),
                                "password": $("#password").val(),
                                "grant_type": "password"
                            };
                            return document.getElementById("my-form").checkValidity();
                        }
                    },
                    url: "token",
                    method: "POST",
                    "content-type": "application/x-www-form-urlencoded",
                    "data": {},
                    loadComplete: function (obj, response) {
                        console.log('loadComplete ', response);
                        localStorage.setItem("_tkn_", response.access_token);
                        window.location = "/";
                    },
                    fail: function (response) {
                        console.log(response.status + ": ", response);
                        if (response.status === 400) {
                            alert("400: NOT AUTHORIZED");
                        }
                    }
                }
            ]
        });
        EV.CreateObject(data);
        EV.CreateObject(new Preloader("PagePreloader"));
    });

</script>
