<div class="row" id="my-vue-app">
    <div class="col-lg-12 col-md-12">
        <div class="card">
            <div class="card-header card-header-tabs" data-background-color="blue">
                <div class="nav-tabs-navigation">
                    <div class="nav-tabs-wrapper">
                        <span class="nav-tabs-title">Business objects</span>
                        <ul class="nav nav-tabs" data-tabs="tabs">
                            <li class="active">
                                <a id="tab-list" href="#list" data-toggle="tab">
                                    <i class="material-icons">line_weight</i> List
                                    <div class="ripple-container"></div>
                                </a>
                            </li>
                            <li class="">
                                <a id="tab-form" href="#form" data-toggle="tab">
                                    <i class="material-icons">create</i> Ajouter
                                    <div class="ripple-container"></div>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="card-content">
                <div class="tab-content">
                    <div id="list" class="tab-pane active material-datatables">                        
                        <v-table ref="theTable" ref="editTable"
                                 datasource="metabo/"
                                 :column-ignore="['UPDATED_BY']"
                                 :column-labels='{"META_BO_ID":"#"}'
                                 detail-row="my-detail-row"></v-table>
                    </div>
                    <div id="form" class="tab-pane">
                        <div class="col-lg-6 col-md-6" style="margin:0 auto">
                            <v-form ref="theForm" meta-datasource="metafield/?bo_name=META_BO"
                                    api="metabo/"
                                    v-on:submit-success="success()"
                                    v-on:submit-fail="error()"></v-form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
</style>
<script id="MyDetailRow" type="text/template">
    <div>
        {{ row.VERSION }}
    </div>
</script>
<script type="text/javascript">
    //my-detail-row
    Vue.component('my-detail-row', {
        template: $("#MyDetailRow").html(),
        props: {
            row: Object
        },
    });
    var vapp = new Vue(
        {
            el: '#my-vue-app',
            store,
            methods: {
                success: function () {
                    NOTIF.success('Objet enregistré avec succès.');
                    $("#tab-list").trigger("click");
                },
                error: function () {
                    NOTIF.error('Impossible d\'enregistré l\'objet !');
                }
            }
        }
    );
    console.log("vapp", vapp);
</script>